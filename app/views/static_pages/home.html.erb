<h1>Photo Widget</h1>

<%= form_with url: '/static_pages/home', method: :get, local: true do |f| %>
  <%= f.label :user_id, "Flickr User ID:"%>
  <%= f.text_field :user_id %>
  <%= f.submit "Display Photos" %>
<% end %>

<% if @user_id %>
  <h2>Photos</h2><BR>
    <% @photos.each do |photo| %>
      <a href=<%=Flickr.url_photopage(photo)%>><%= image_tag(Flickr.url_q(photo)) %></a>
  <% end %>
<% end %>